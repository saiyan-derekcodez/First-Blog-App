      <form class="row g-3 needs-validation" action="/newBlog" method="POST" enctype="multipart/form-data">
  <div class="col-md-6 position-relative">
    <label for="title" class="form-label"><h5>Blog Title</h5></label>
    <div class="input-group has-validation">
      <input
        type="text"
        class="form-control"
        name="title"
        id="title"
        placeholder="special53"
        required
      />
